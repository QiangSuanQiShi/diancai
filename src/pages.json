{
  "easycom": {
    "custom": {
      "^mp-(.*)": "@/components/mp-$1.vue",
      "^u--(.*)": "uview-plus/components/u-$1/u-$1.vue",
      "^up-(.*)": "uview-plus/components/u-$1/u-$1.vue",
      "^u-([^-].*)": "uview-plus/components/u-$1/u-$1.vue",
      "^(?!z-paging-refresh|z-paging-load-more)z-paging(.*)": "z-paging/components/z-paging$1/z-paging$1.vue"
    }
  },
  "pages": [
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "首页"
      }
    },
    {
      "path": "pages/user/index",
      "style": {
        "navigationBarTitleText": "我的",
        "navigationBarTextStyle": "white",
        "navigationBarBackgroundColor": "#12c294"
      }
    },
    {
      "path": "pages/user/login",
      "style": {
        "navigationBarTitleText": "登录"
      }
    },
    {
      "path": "pages/index/store",
      "style": {
        "navigationBarTitleText": "店家",
        "navigationBarBackgroundColor": "#12c294"
      }
    },
    {
      "path": "pages/order/index",
      "style": {
        "navigationBarTitleText": "订单"
      }
    },
    {
      "path": "pages/order/detail",
      "style": {
        "navigationBarTitleText": "详细",
        "navigationBarBackgroundColor": "#f6f7fa"
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  },
  "tabBar": {
    "borderStyle": "black",
    //边框颜色
    "backgroundColor": "#F7F7F7",
    //背景颜色
    "color": "#000000",
    //默认颜色
    "selectedColor": "#07C160",
    "list": [
      {
        "text": "首页",
        "pagePath": "pages/index/index",
        "iconPath": "static/images/i-home.png",
        "selectedIconPath": "static/images/i-home-selected.png"
      },
      {
        "text": "订单",
        "pagePath": "pages/order/index",
        "iconPath": "static/images/i-work.png",
        "selectedIconPath": "static/images/i-work-selected.png"
      },
      {
        "text": "我的",
        "pagePath": "pages/user/index",
        "iconPath": "static/images/i-my.png",
        "selectedIconPath": "static/images/i-my-selected.png"
      }
    ]
  }
}
